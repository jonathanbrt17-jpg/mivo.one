<script>
const target=new Date(2025,11,25,0,0,0).getTime();

function fireworks(){
  for(let i=0;i<20;i++){
    const f=document.createElement("div");
    f.className="firework";
    f.style.left=Math.random()*100+"vw";
    f.style.top=Math.random()*60+"vh";
    document.body.appendChild(f);
    setTimeout(()=>f.remove(),1200);
  }
}

setInterval(()=>{
  const t=target-Date.now();
  if(t<=0){fireworks();return;}
  d.textContent=Math.floor(t/86400000);
  h.textContent=Math.floor(t%86400000/3600000);
  m.textContent=Math.floor(t%3600000/60000);
  s.textContent=Math.floor(t%60000/1000);
},1000);
</script>

